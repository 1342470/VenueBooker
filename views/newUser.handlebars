    <form action="/users/create" id="addUser" method="post" name"addUserForm">
    <div class="card">
    <h2>Add user</h2>

    <div class="row">
        <div class="col">
            <div class="form-group">
    <label for="id">User ID:</label>
    <input type="number" id="id" placeholder="user id" name="id" required></input>
            </div>
        </div>

        <div class="col">
            <div class="form-group">
    <label for="fName">Users first name:</label>
    <input type="text" id="fName" placeholder="Given name" name="first_name" required></input>
            </div>
        </div>

        <div class="col">
            <div class="form-group">
    <label for="sName">Users family Name:</label>
    <input type="text" id="sName" placeholder="Family name" name="last_name" required></input>
            </div>
        </div>


        <div class="col">
            <div class="form-group">
    <label for="contactForm">User Contact details:</label>
    <input type="text" id="contactForm" placeholder="Contact details" name="contact" required></input>
            </div>
        </div>

        <div class="col">
            <div class="form-group">
    <label for="gender">Gender:</label>
    <input type="text" id="gender" placeholder="gender" name="gender" required></input>
            </div>
        </div>

        <div class="col">
            <div class="form-group">
    <label for="VenueForm">Date Booked</label>
    <input type="text" id="VenueForm" placeholder="date" name="date" required></input>
            </div>
        </div>

        <div class="col">
            <div class="form-group">
    <label for="VenueForm">Venue user Booked</label>
    <input type="text" id="VenueForm" placeholder="Venue booked" name="venue" required></input>
            </div>
        </div>

        <div class="col">
            <input type="submit" value="Submit">
        
      

        </div>
    </div>
</div>
</br>
  </form>