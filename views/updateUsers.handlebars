<h2>Update user</h2>
<h2>You are updating  {{user.first_name}}</h2>

<p>to update venue data please enter the new data in the form below</p>

<form action="/users/update" id="updateUser" method="post" name"updateForm">
    <div class="card">
        <h2>update user</h2>

        <div class="row">
            <div class="col">
                <div class="form-group">
                     <input type="hidden" id="id" name="id" value="{{user.id}}"></input>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label for="fName">Users first name:</label>
                    <input type="text" id="first_name" placeholder="Given name" name="first_name" required></input>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label for="sName">Users family Name:</label>
                    <input type="text" id="last_name" placeholder="Family name" name="last_name" required></input>
                </div>
            </div>


            <div class="col">
                <div class="form-group">
                    <label for="contactForm">User Contact details:</label>
                    <input type="text" id="contact" placeholder="Contact details" name="contact" required></input>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label for="gender">Gender:</label>
                    <input type="text" id="gender" placeholder="gender" name="gender"></input>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label for="VenueForm">Date Booked</label>
                    <input type="text" id="date" placeholder="date" name="date" required></input>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label for="VenueForm">Venue user Booked</label>
                    <input type="text" id="venue" placeholder="Venue booked" name="venue" required></input>
                </div>
            </div>

     <div class="form-group">
                    <label for="VenueForm">time slot Booked</label>
                    <input type="text" id="timeSlot" placeholder="timeslot booked" name="venue" required></input>
                </div>
            </div>            

            <div class="col">
                <input type="submit" value="Submit">



            </div>
        </div>
    </div>
    </br>
</form>